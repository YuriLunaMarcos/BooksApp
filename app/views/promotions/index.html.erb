<h1>Listado de Promociones</h1>

<table>
  <thead>
    <tr>
      <th>Cliente</th>
      <th>Empleado</th>
      <th>Fecha</th>
      <th>Descripción</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @promotions.each do |promotion| %>
      <tr>
        <td><%= promotion.costumer.nombre %></td>
        <td><%= promotion.employee.nombre %></td>
        <td><%= promotion.fecha %></td>
        <td><%= promotion.descripcion %></td>
        <td><%= link_to 'Mostrar', promotion %></td>
        <td><%= link_to 'Editar', edit_promotion_path(promotion) %></td>
        <td><%= link_to 'Eliminar', promotion, method: :delete, data: { confirm: 'Estas seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nueva Promoción', new_promotion_path %>
